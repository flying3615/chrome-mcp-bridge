{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "types": ["node"],
    "resolveJsonModule": true,
    "outDir": "./dist",
    "allowJs": false
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}


