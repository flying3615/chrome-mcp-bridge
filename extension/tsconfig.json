{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "lib": ["ES2022", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "types": ["chrome"],
    "outDir": "./dist",
    "allowJs": false
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}


